<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_700"
        tools:context=".features.wheather_report.weather_list.view.WeatherListActivity">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/user_profile_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Wheater \nReport"/>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|right">


                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="username"
                                android:gravity="right"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/tv_logout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="logout"
                                android:gravity="right"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="25dp">
                            <ImageView
                                android:id="@+id/img_user"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:translationY="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="?attr/text_color"
                            android:textColorHint="?attr/hint_text_color"
                            android:textStyle="bold|italic"
                            android:textSize="18sp"

                            android:text="Todays Wheather Condition"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:text="Latitude"
                                    android:textSize="10sp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:id="@+id/tv_latitude"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginBottom="5dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Longitude"
                                    android:textSize="10sp"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:gravity="center"/>
                                <TextView
                                    android:id="@+id/tv_longitude"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:gravity="center"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textSize="10sp"
                                    android:layout_marginBottom="5dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:text="Timezone"
                                    android:textSize="10sp"
                                    android:gravity="center"/>
                                <TextView
                                    android:id="@+id/tv_timezone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:text="Pressure"
                                    android:textSize="10sp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:id="@+id/tv_pressure"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginBottom="5dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Humidity"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textSize="10sp"
                                    android:gravity="center"/>
                                <TextView
                                    android:id="@+id/tv_humidity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginBottom="5dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Wind Speed"
                                    android:textSize="10sp"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:textSize="10sp"
                                    android:id="@+id/wind_speed"
                                    android:gravity="center"
                                    android:textColor="?attr/text_color"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:layout_marginBottom="5dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:background="@color/gray"
                            android:layout_marginHorizontal="3dp"
                            android:layout_height="1dp"/>

                        <LinearLayout
                            android:id="@+id/error"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:gravity="top|center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/no_connection_error"/>
                            <TextView
                                android:id="@+id/tv_no_data_error"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:textStyle="italic|bold"
                                android:textColor="?attr/text_color"
                                android:textColorHint="?attr/hint_text_color"
                                android:text="Cannot found any data, please turn on your internet connection and GPS"/>

                        </LinearLayout>



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_weather_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="20dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>

</layout>