<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="18dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="24dp"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:id="@+id/root"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/profile_pict"
                android:layout_width="40dp"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:src="#000000"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_tv"
            android:layout_marginHorizontal="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Wangh Shii"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/avatar"
            app:layout_constraintTop_toTopOf="@id/avatar"
            />

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="/@Wangh Shii"
            android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toRightOf="@id/name_tv"
            app:layout_constraintBottom_toBottomOf="@id/name_tv"
            app:layout_constraintTop_toTopOf="@id/name_tv"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv_detail_desc"
            android:layout_marginLeft="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Director of Netshare Company"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/name_tv"
            />

        <TextView
            android:id="@+id/location_tv"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Wangh Shii"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_desc"
            />

        <TextView
            android:id="@+id/email_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="/@Wangh Shii"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/location_tv"
            app:layout_constraintBottom_toBottomOf="@id/location_tv"
            app:layout_constraintTop_toTopOf="@id/location_tv"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_F5F5F5"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/email_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>